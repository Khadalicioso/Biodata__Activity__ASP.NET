﻿
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="form-container">
        <div class="image-container w-25 h-25 rounded float-end">
            <img src="~/Content/Images/profile.jpg" alt="Profile Image" class="img-thumbnail">
        </div>
        <form class="row">
            <h2>Bio Data</h2>
            <!-- Name -->
            <div class="col-8 mb-4">
                <label for="name" class="form-label">Name</label>
                <input type="text" class="form-control" id="name" placeholder="Enter your name">
            </div>

            <!-- Pin -->
            <div class="col col-sm-4">
                <label for="pin" class="form-label">PIN:</label>
                <input type="password" class="form-control" id="pin" name="pin" placeholder="Enter your pin" maxlength="4" pattern="\d{4}" required>
            </div>

            <!-- Birthdate -->
            <div class="col-5 mb-4">
                <label for="birthdate" class="form-label">Birthdate</label>
                <input type="date" class="form-control" id="birthdate">
            </div>

            <!-- Age -->
            <div class="col-2 col-sm-2">
                <label for="age" class="form-label">Age</label>
                <input type="text" class="form-control" id="age" readonly>
            </div>

            <!-- Gender -->
            <div class="row mb-4">
                <label class="form-label">Gender</label><br>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="gender" id="male" value="male">
                    <label class="form-check-label" for="male">Male</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="gender" id="female" value="female">
                    <label class="form-check-label" for="female">Female</label>
                </div>
            </div>

            <!-- Mobile Number -->
            <div class="mb-4">
                <label for="mobile" class="form-label">Mobile Number</label>
                <input type="text" class="form-control" id="mobile" placeholder="Enter mobile number" maxlength="11" oninput="this.value = this.value.replace(/[^0-9]/g, '');">
            </div>

            <!-- Nationality -->
            <div class="mb-3">
                <label for="nationality" class="form-label">Nationality</label>
                <select class="form-select" id="nationality">
                    <option value="Filipino">Filipino</option>
                </select>
            </div>

            <!-- Hobbies -->
            <div class="col mb-4">
                <label class="form-label">Hobbies</label><br>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="singing" id="hobbySinging">
                    <label class="form-check-label" for="hobbySinging">Singing</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="dancing" id="hobbyDancing">
                    <label class="form-check-label" for="hobbyDancing">Dancing</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="others" id="hobbyOthers">
                    <label class="form-check-label" for="hobbyOthers">Others</label>
                </div>
            </div>

            <!-- Educational Attainment -->
            <div class="mb-4">
                <label class="form-label">Educational Attainment</label>
                <ul class="list">
                    <li>Primary</li>
                    <li>Secondary</li>
                    <li>Tertiary</li>
                </ul>
            </div>

            <!-- Status -->
            <div class="mb-4">
                <label class="form-label">Status</label><br>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="status" id="regular" value="regular">
                    <label class="form-check-label" for="regular">Regular</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="status" id="irregular" value="irregular">
                    <label class="form-check-label" for="irregular">Irregular</label>
                </div>
            </div>
        </form>
    </div>
</div>